<div class='row'>
  <div class='col-md-8 col-md-offset-2'>
    <ul class='list-unstyled'>
      <% @users.each do |user| %>
        <% if user.profile && user.profile.avatar_content_type != nil %>
          <li>
            <div class="well row <%= cycle('white-bg', '') %>">
              <div class='col-sm-4 text-center'>
                <%= link_to user do %>
                  <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-pic' %>
                <% end %>
              </div>
              <div class='col-sm-6'>
                <%= link_to user do %>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %>
                <p><%= user.profile.job_title %></p>
              </div>
              <% if user.plan_id == 2 %>
                <div class='col-sm-2'>
                  <h3><span class='label label-danger'>PRO</span></h3>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>