<div class='row'>
  <div class='col-md-3 text-center'>
    <%= image_tag @user.profile.avatar.url  %>
  </div>
  <div class='col-md-9'>
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class='job-title-icon text-center'><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
    <div class='well'><%= @user.profile.description %></div>
    <% if current_user.plan_id == 2 || current_user.id == @user.id %>
      <p>Phone Number: <%= @user.profile.phone_number %></p>
      <p>Contact Email: <%= @user.profile.contact_email %></p>
    <% end %>
  </div>
</div>
