<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <h4>Get exclusive access to others' contact info for only $10/month!</h4>
    <% else %>
      <h1>Basic Account</h1>
      <h4>Sign up for free and get basic access to the community.</h4>
    <% end %>
  </div>
  <div class='col-md-6 col-md-offset-3'>
    <div class='well'>
      <h2>Sign up</h2>
      <% if params[:plan] == '1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
